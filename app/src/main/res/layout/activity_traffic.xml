<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/traffic_background">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/r_hck1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/traffic_tl1_board"
                android:gravity="center"
                android:padding="5dp"
                android:text="环城快速路" />

            <TextView
                android:id="@+id/r_hck2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/traffic_bl1_board"
                android:gravity="center"
                android:padding="5dp"
                android:text="环城快速路" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/r_hck3"
                    android:text="环城快速路"
                    android:gravity="center"
                    android:background="#6ab82e"
                    android:layout_width="0dp"
                    android:layout_weight="14"
                    android:layout_marginRight="2dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/r_hcg3"
                    android:gravity="center"
                    android:background="#6ab82e"
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="10">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/r_xy"
                            android:text="学院路"
                            android:ems="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#6ab82e"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/r_lx"
                            android:text="联想路"
                            android:ems="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#6ab82e"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#fff"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="10">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/r_xf"
                            android:text="幸福路"
                            android:gravity="center"
                            android:ems="1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#6ab82e"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/r_yy"
                            android:text="医院路"
                            android:gravity="center"
                            android:ems="1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="#6ab82e"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="11">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="30"
                            android:layout_height="match_parent"/>
                        <LinearLayout
                            android:paddingTop="3dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="2dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="37">
                            <TextView
                                android:id="@+id/r_stop"
                                android:background="#6ab82e"
                                android:gravity="center"
                                android:text="停车场"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="29"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/r_hck4"
                    android:text="环城快速路"
                    android:gravity="center"
                    android:background="#6ab82e"
                    android:layout_width="0dp"
                    android:layout_weight="14"
                    android:layout_marginRight="2dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/r_hcg4"
                    android:gravity="center"
                    android:background="#6ab82e"
                    android:layout_marginLeft="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/r_hcg1"
                android:gravity="center"
                android:text="环城高速"
                android:padding="5dp"
                android:background="@drawable/traffic_tr1_board"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/r_hcg2"
                android:gravity="center"
                android:text="环城高速"
                android:padding="5dp"
                android:background="@drawable/traffic_br1_board"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:paddingRight="17dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/i_refresh"
                    android:src="@drawable/refresh"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/t_date"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="2017-6-7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/t_week"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="星期三"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="温度:"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"
                            android:gravity="end|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:text="相对湿度:"
                            android:textSize="17sp"
                            android:gravity="end|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:text="PM2.5:"
                            android:textSize="17sp"
                            android:gravity="end|center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/t_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="end|start"
                            android:text="0℃"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/t_humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="end|start"
                            android:text="0%"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/t_pm2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="end|start"
                            android:text="0 μg/m3"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="7dp"
                        android:text="道路拥挤程度示意:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="严重拥挤"
                                android:textSize="10sp"
                                android:gravity="center|end"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="中度拥堵"
                                android:textSize="10sp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center|end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="一般拥堵"
                                android:textSize="10sp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center|end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="缓行"
                                android:textSize="10sp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center|end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="畅通"
                                android:textSize="10sp"
                                android:layout_marginBottom="5dp"
                                android:gravity="center|end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="这是占位置的"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="#00ffffff"
                                android:gravity="center|end"
                                android:background="#b01e23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="这是占位置的"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="#00ffffff"
                                android:gravity="center|end"
                                android:background="#e33532"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="这是占位置的"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="#00ffffff"
                                android:gravity="center|end"
                                android:background="#f49b25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="这是占位置的"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="#00ffffff"
                                android:gravity="center|end"
                                android:background="#ece93a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="这是占位置的"
                                android:layout_marginBottom="5dp"
                                android:textSize="10sp"
                                android:textColor="#00ffffff"
                                android:gravity="center|end"
                                android:background="#6ab82e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/i_police1"
                        android:src="@drawable/jiaojing1_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/i_police2"
                        android:src="@drawable/jiaojing2_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|end"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="500米"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:src="@drawable/scale"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="0dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>