<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/accountmanager_dialog_board">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ccc">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:textSize="20sp"
            android:text="\t\t\t\t红绿灯设置"
            android:background="@drawable/accountmanager_dialog_board"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|end"
            android:text="红灯周期:"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/e_red"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|start"
            android:text="元"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|end"
            android:text="黄灯周期:"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/e_yellow"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|start"
            android:text="元"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|end"
            android:text="绿灯周期:"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/e_green"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:gravity="center|start"
            android:text="元"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_ok"
                android:text="确定"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_cancle"
                android:text="取消"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>