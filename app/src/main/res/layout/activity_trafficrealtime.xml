<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.TrafficRealTimeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">
        <TextView
            android:id="@+id/t_temp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="室外空气质量"
            android:textSize="27sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/t_temp2"
            android:text="PM2.5:"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_below="@+id/t_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_pm2"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/t_temp2"
            android:layout_below="@id/t_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_temp3"
            android:text="温度:"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_below="@+id/t_temp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_temperature"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/t_temp2"
            android:layout_below="@id/t_temp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_temp4"
            android:text="湿度:"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_below="@+id/t_temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_humidity"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/t_temp2"
            android:layout_below="@id/t_temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_marginBottom="10dp"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/t_tr1"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="一号道路:爆表"
               android:textStyle="bold"
               android:gravity="center"
               android:textSize="25sp"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/t_tr2"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textStyle="bold"
               android:text="二号道路:爆表"
               android:gravity="center"
               android:textSize="25sp"
               android:layout_height="match_parent"/>
           <TextView
               android:id="@+id/t_tr3"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center"
               android:textStyle="bold"
               android:text="三号道路:爆表"
               android:textSize="25sp"
               android:layout_height="match_parent"/>
       </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t_cr1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:background="#f00"
                android:textColor="#0fff"
                android:textSize="25sp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/t_cr2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:background="#0f0"
                android:textColor="#0fff"
                android:textSize="25sp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/t_cr3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:background="#00f"
                android:textColor="#0fff"
                android:textSize="25sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>