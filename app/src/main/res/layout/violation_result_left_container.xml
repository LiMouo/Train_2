<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/L_root"
        android:layout_width="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        android:background="@drawable/violation_result_item_board"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t_car_id"
            android:text="鲁B10002"
            android:textSize="23sp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_number"
            android:text="未处理违章10次"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t_reduce"
                android:text="扣2分"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t_money"
                android:text="罚款250元"
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/i_icon"
        android:src="@drawable/reduce"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
</LinearLayout>