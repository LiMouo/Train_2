<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/L_root"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="#eee"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t_time"
            android:text="2017-04-02 17:55:00"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:textColor="#aaa"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="未处理"
            android:gravity="end|center"
            android:textSize="18sp"
            android:textColor="#888"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/t_road"
        android:text="学院路"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/t_info"
        android:text="驾驶机动车在高速公路，城市快速路以外的道路上不接规定车道行驶的。"
        android:textColor="#888"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t_reduce"
            android:text="扣:\t\t0分"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t_money"
            android:text="罚款:\t\t100元"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>