<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t_route3"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:text="乘客姓名:"
                android:textSize="24sp"
                android:gravity="center|end"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="手机号码:"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="上车地点:"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="下车地点:"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="乘车日期:"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_name3"
                android:textSize="24sp"
                android:gravity="center|start"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t_telephone3"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t_begin3"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t_end3"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/t_time3"
                android:textSize="24sp"
                android:padding="5dp"
                android:gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_next3"
            android:text="下一步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>